<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/main_top"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:text="더치페이 제목"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/share_title"
            android:inputType="text"
            android:gravity="center"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:id="@+id/view_main"
        android:background="@color/browser_actions_bg_grey"
        app:layout_constraintTop_toBottomOf="@+id/main_top"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/main_middle"
        app:layout_constraintTop_toBottomOf="@+id/view_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:visibility="gone"
                android:gravity="center"
                android:background="@drawable/button_deep_round"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/main_list_item"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="20dp"
                android:layout_height="110dp">
                <Button
                    android:text="+"
                    android:id="@+id/main_place_button"
                    android:textSize="25sp"
                    android:layout_width="80dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_marginStart="10dp"
                    android:text="에서"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/main_price_button"
                    android:layout_marginStart="10dp"
                    android:text="+"
                    android:textSize="25sp"
                    android:layout_width="80dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_marginStart="10dp"
                    android:text="원"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:visibility="gone"
                android:id="@+id/main_plus_but"
                android:text="+"
                android:textSize="25sp"
                android:gravity="center"
                android:background="@drawable/button_add_deep_round"
                android:textColor="@color/black"
                android:layout_gravity="end|top"
                android:layout_width="45dp"
                android:layout_height="45dp"/>
            <Button

                android:id="@+id/plus_item"
                android:background="@drawable/button_deep_round"
                android:text="+"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="110dp"/>
        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_recycelerView"
            android:layout_width="match_parent"
            android:layout_marginBottom="180dp"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_height="wrap_content"
            tools:listitem="@layout/list_items"
            />


    </LinearLayout>


    <Button
        android:id="@+id/next_level_button"
        android:background="@color/cardview_dark_background"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="@string/next_level"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>